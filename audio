/*********************************************************************
  ESP32-S3-CAM + Robot Head - Batch SD Card Upload (4 images at once)
  HTTPS Upload with WiFiClientSecure
*********************************************************************/

#include "esp_camera.h"
#include "SD_MMC.h"
#include <ESP32Servo.h>
#include <WiFi.h>
#include <HTTPClient.h>
#include <WiFiClientSecure.h>
#include <WebServer.h>

// ==================== WIFI CONFIGURATION ====================
const char* ssid = "ISDN300C";
const char* password = "12345678";

// ==================== SERVER CONFIGURATION ====================
const char* SERVER_HOST = "inx-fiona.tail4fb9a3.ts.net";
const char* UPLOAD_URL = "https://inx-fiona.tail4fb9a3.ts.net/upload_batch";  // HTTPS!
const char* CLIENT_ID = "esp32_robot_camera";

// ==================== CAMERA PINS (GOOUUU ESP32-S3-CAM) ====================
#define PWDN_GPIO_NUM     -1
#define RESET_GPIO_NUM    -1
#define XCLK_GPIO_NUM     15
#define SIOD_GPIO_NUM     4
#define SIOC_GPIO_NUM     5

#define Y9_GPIO_NUM       16
#define Y8_GPIO_NUM       17
#define Y7_GPIO_NUM       18
#define Y6_GPIO_NUM       12
#define Y5_GPIO_NUM       10
#define Y4_GPIO_NUM       8
#define Y3_GPIO_NUM       9
#define Y2_GPIO_NUM       11

#define VSYNC_GPIO_NUM    6
#define HREF_GPIO_NUM     7
#define PCLK_GPIO_NUM     13

// ===================== SERVO SETTINGS =====================
const uint8_t SERVO_HORIZONTAL = 21;
const uint8_t SERVO_NOD        = 20;
const uint8_t BUTTON_PIN       = 45;

const int STEP_DELAY   = 30;
const int HOLD_TIME    = 2000;

// ===================== GLOBAL OBJECTS =====================
int photo_counter = 1;
bool wifi_connected = false;
bool is_capturing = false;

WebServer server(80);

// Structure to hold photo info for batch upload
struct PhotoInfo {
  String filename;
  String position;
  int number;
};

// ===================== RobotHead Class =====================
class RobotHead {
  public:
    void setupPins(uint8_t hPin, uint8_t nPin, uint8_t btnPin = 0);
    void begin();
    void moveH(int target);
    void moveN(int target);

  private:
    Servo servoH, servoN;
    uint8_t pinH = 0, pinN = 0, pinButton = 0;
    int posH = 45, posN = 45;
    void moveSmooth(Servo &servo, int target, int &current);
};

void RobotHead::setupPins(uint8_t hPin, uint8_t nPin, uint8_t btnPin) {
  pinH = hPin;  pinN = nPin;  pinButton = btnPin;
}

void RobotHead::begin() {
  if (pinH == 0 || pinN == 0) {
    Serial.println("ERROR: Servo pins not set!");
    while (true) delay(100);
  }
  ESP32PWM::allocateTimer(0);
  ESP32PWM::allocateTimer(1);
  servoH.setPeriodHertz(50);
  servoN.setPeriodHertz(50);
  servoH.attach(pinH, 500, 2400);
  servoN.attach(pinN, 500, 2400);
  servoH.write(45);
  servoN.write(45);
  posH = posN = 45;
  Serial.println("RobotHead servos initialized ‚Äì centered");
}

void RobotHead::moveSmooth(Servo &servo, int target, int &current) {
  while (current != target) {
    current += (current < target) ? 1 : -1;
    servo.write(current);
    delay(STEP_DELAY);
  }
}

void RobotHead::moveH(int target) { moveSmooth(servoH, target, posH); }
void RobotHead::moveN(int target) { moveSmooth(servoN, target, posN); }

RobotHead head;

// ==================== SERVER CONNECTION TEST ====================
bool testServerConnection() {
  Serial.println("\nüîç Testing server connection...");
  
  WiFiClientSecure client;
  client.setInsecure();  // Skip SSL verification
  
  HTTPClient http;
  
  // Try to reach the upload endpoint
  http.begin(client, UPLOAD_URL);
  http.setTimeout(10000);  // 10 second timeout
  
  // Just do a HEAD/GET request to check connectivity
  http.addHeader("X-Client-ID", CLIENT_ID);
  
  int httpCode = http.GET();
  
  if (httpCode > 0) {
    Serial.printf("‚úÖ Server reachable! Response: %d\n", httpCode);
    String response = http.getString();
    if (response.length() > 0 && response.length() < 200) {
      Serial.println("Response: " + response);
    }
    http.end();
    return true;
  } else {
    Serial.printf("‚ùå Cannot reach server! Error: %d\n", httpCode);
    
    // Print specific error details
    switch(httpCode) {
      case -1: Serial.println("   ‚Üí Connection lost/timeout"); break;
      case -2: Serial.println("   ‚Üí Failed to connect"); break;
      case -3: Serial.println("   ‚Üí Connection refused"); break;
      case -4: Serial.println("   ‚Üí Connection lost"); break;
      case -11: Serial.println("   ‚Üí Timeout"); break;
      default: Serial.println("   ‚Üí Unknown error"); break;
    }
    
    http.end();
    return false;
  }
}

// ==================== BATCH UPLOAD (4 IMAGES) ====================
bool uploadBatchHTTP(PhotoInfo photos[], int count) {
  if (!wifi_connected) {
    Serial.println("‚ö†Ô∏è WiFi not connected - skipping upload");
    return false;
  }

  Serial.printf("\nüì¶ Starting BATCH upload of %d images...\n", count);

  // Use WiFiClientSecure (same as working code)
  WiFiClientSecure client;
  client.setInsecure();  // Skip SSL certificate verification
  
  HTTPClient http;
  http.begin(client, UPLOAD_URL);
  http.setTimeout(120000);  // 2 minute timeout for batch

  // Build multipart form data with multiple files
  String boundary = "----WebKitFormBoundary7MA4YWxkTrZu0gW";
  String contentType = "multipart/form-data; boundary=" + boundary;

  // Calculate total size first
  size_t totalSize = 0;
  size_t fileSizes[4] = {0};
  
  for (int i = 0; i < count; i++) {
    File file = SD_MMC.open(photos[i].filename, FILE_READ);
    if (!file) {
      Serial.printf("‚ùå Failed to open: %s\n", photos[i].filename.c_str());
      return false;
    }
    fileSizes[i] = file.size();
    totalSize += fileSizes[i];
    file.close();
  }

  // Add space for multipart boundaries and headers
  totalSize += (count * 300) + 100;

  Serial.printf("üìä Total batch size: ~%u KB\n", totalSize / 1024);

  // Allocate buffer for entire payload
  uint8_t* payload = (uint8_t*)malloc(totalSize);
  if (!payload) {
    Serial.println("‚ùå Failed to allocate memory for batch!");
    return false;
  }

  // Build the multipart payload
  size_t offset = 0;

  for (int i = 0; i < count; i++) {
    // Open file
    File file = SD_MMC.open(photos[i].filename, FILE_READ);
    if (!file) {
      Serial.printf("‚ùå Failed to open: %s\n", photos[i].filename.c_str());
      free(payload);
      return false;
    }

    // Build part header (matching working code style)
    String partHeader = "--" + boundary + "\r\n";
    partHeader += "Content-Disposition: form-data; name=\"file" + String(i) + "\"; filename=\"";
    partHeader += photos[i].position + "_" + String(photos[i].number) + ".jpg\"\r\n";
    partHeader += "Content-Type: image/jpeg\r\n\r\n";

    // Copy header to payload
    memcpy(payload + offset, partHeader.c_str(), partHeader.length());
    offset += partHeader.length();

    // Read and copy file data
    size_t bytesRead = file.read(payload + offset, fileSizes[i]);
    if (bytesRead != fileSizes[i]) {
      Serial.printf("‚ùå Read error for %s\n", photos[i].filename.c_str());
      file.close();
      free(payload);
      return false;
    }
    offset += bytesRead;
    file.close();

    // Add CRLF after file data
    memcpy(payload + offset, "\r\n", 2);
    offset += 2;

    Serial.printf("  ‚úì Added %s (%u KB)\n", photos[i].position.c_str(), fileSizes[i] / 1024);
  }

  // Add closing boundary
  String closingBoundary = "--" + boundary + "--\r\n";
  memcpy(payload + offset, closingBoundary.c_str(), closingBoundary.length());
  offset += closingBoundary.length();

  Serial.printf("üì§ Assembled payload: %u bytes\n", offset);

  // Set headers (matching working code)
  http.addHeader("Content-Type", contentType);
  http.addHeader("X-Client-ID", CLIENT_ID);
  http.addHeader("X-Batch-Size", String(count));
  http.addHeader("X-Timestamp", String(millis()));

  // Debug output
  Serial.println("\nüìã Request Details:");
  Serial.printf("  URL: %s\n", UPLOAD_URL);
  Serial.printf("  Method: POST\n");
  Serial.printf("  Content-Type: %s\n", contentType.c_str());
  Serial.printf("  Payload size: %u bytes\n", offset);

  // Send POST request
  Serial.println("\nüì° Uploading batch...");
  unsigned long startTime = millis();
  
  int httpResponseCode = http.POST(payload, offset);
  
  unsigned long duration = millis() - startTime;
  Serial.printf("‚è±Ô∏è  Upload took: %lu ms\n", duration);
  
  free(payload);

  // Handle response
  if (httpResponseCode > 0) {
    if (httpResponseCode == 200 || httpResponseCode == 201) {
      Serial.printf("‚úÖ Batch upload successful! Response: %d\n", httpResponseCode);
      String response = http.getString();
      if (response.length() > 0 && response.length() < 1000) {
        Serial.println("Server response: " + response);
      }
      http.end();
      return true;
    } else {
      Serial.printf("‚ùå Server returned error: %d\n", httpResponseCode);
      String response = http.getString();
      if (response.length() > 0 && response.length() < 500) {
        Serial.println("Error details: " + response);
      }
      http.end();
      return false;
    }
  } else {
    // Negative response = connection error
    Serial.printf("‚ùå Connection error: %d\n", httpResponseCode);
    
    // Print specific error
    switch(httpResponseCode) {
      case -1: Serial.println("   ‚Üí Connection lost/timeout during upload"); break;
      case -2: Serial.println("   ‚Üí Failed to connect to server"); break;
      case -3: Serial.println("   ‚Üí Connection refused"); break;
      case -4: Serial.println("   ‚Üí Connection lost"); break;
      case -11: Serial.println("   ‚Üí Timeout"); break;
      default: Serial.println("   ‚Üí Unknown error"); break;
    }
    
    http.end();
    return false;
  }
}

// ===================== Helper: Take & Save Photo =====================
void takePhoto(int number, const char* position_name) {
  Serial.printf("üì∑ Taking photo %d/4 [%s]...\n", number, position_name);

  camera_fb_t *fb = esp_camera_fb_get();
  if (!fb) {
    Serial.println("‚ùå Camera capture FAILED!");
    return;
  }

  Serial.printf("‚úì Captured: %dx%d | %u bytes\n", fb->width, fb->height, fb->len);

  // Save to SD card
  char filename[64];
  snprintf(filename, sizeof(filename), "/robot_pos%d_%s.jpg", number, position_name);

  File file = SD_MMC.open(filename, FILE_WRITE);
  if (!file) {
    Serial.println("‚ùå SD card write failed!");
    esp_camera_fb_return(fb);
    return;
  }
  
  file.write(fb->buf, fb->len);
  file.close();
  Serial.printf("üíæ Saved to SD: %s\n", filename);
  
  esp_camera_fb_return(fb);
}

void capture();

// ===================== Setup =====================
void setup() {
  Serial.begin(115200);
  while (!Serial) delay(10);
  Serial.println("\n=== ESP32-S3-CAM + Robot Head + BATCH Upload (HTTPS) ===");

  // Camera initialization
  camera_config_t config;
  config.ledc_channel = LEDC_CHANNEL_0;
  config.ledc_timer   = LEDC_TIMER_0;
  config.pin_d0 = Y2_GPIO_NUM;
  config.pin_d1 = Y3_GPIO_NUM;
  config.pin_d2 = Y4_GPIO_NUM;
  config.pin_d3 = Y5_GPIO_NUM;
  config.pin_d4 = Y6_GPIO_NUM;
  config.pin_d5 = Y7_GPIO_NUM;
  config.pin_d6 = Y8_GPIO_NUM;
  config.pin_d7 = Y9_GPIO_NUM;
  config.pin_xclk = XCLK_GPIO_NUM;
  config.pin_pclk = PCLK_GPIO_NUM;
  config.pin_vsync = VSYNC_GPIO_NUM;
  config.pin_href = HREF_GPIO_NUM;
  config.pin_sscb_sda = SIOD_GPIO_NUM;
  config.pin_sscb_scl = SIOC_GPIO_NUM;
  config.pin_pwdn = PWDN_GPIO_NUM;
  config.pin_reset = RESET_GPIO_NUM;
  config.xclk_freq_hz = 20000000;
  config.pixel_format = PIXFORMAT_JPEG;
  config.frame_size = FRAMESIZE_SVGA;  // 800x600 for smaller file size
  config.jpeg_quality = 15;  // Slightly lower quality
  config.fb_count = 2;
  config.grab_mode = CAMERA_GRAB_LATEST;
  config.fb_location = CAMERA_FB_IN_PSRAM;

  if (esp_camera_init(&config) != ESP_OK) {
    Serial.println("‚ùå Camera init failed!");
    while (1) delay(1000);
  }
  Serial.println("‚úÖ Camera OK");

  sensor_t *s = esp_camera_sensor_get();
  s->set_brightness(s, 1);
  s->set_contrast(s, 1);
  s->set_whitebal(s, 1);

  // SD Card initialization
  SD_MMC.setPins(39, 38, 40);
  if (!SD_MMC.begin("/sdcard", true)) {
    Serial.println("‚ùå SD Card mount failed!");
    while (1) delay(1000);
  }
  
  uint64_t cardSize = SD_MMC.cardSize() / (1024 * 1024);
  Serial.printf("‚úÖ SD Card OK (%llu MB)\n", cardSize);

  // Servos initialization
  Serial.println("Initializing servos...");
  head.setupPins(SERVO_HORIZONTAL, SERVO_NOD, BUTTON_PIN);
  head.begin();
  delay(1000);
  Serial.println("‚úÖ Servos ready");

  // Button setup
  pinMode(BUTTON_PIN, INPUT_PULLUP);
  Serial.println("‚úÖ Button setup complete (GPIO 45, active LOW)");

  // WiFi connection
  Serial.println("\n========================================");
  Serial.println("üì° WIFI CONNECTION");
  Serial.println("========================================");
  Serial.printf("SSID: %s\n", ssid);
  
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);
  
  int attempts = 0;
  while (WiFi.status() != WL_CONNECTED && attempts < 30) {
    delay(500);
    Serial.print(".");
    attempts++;
    if (attempts % 10 == 0) Serial.printf("\n[%d/30]", attempts);
  }
  Serial.println();
  
  if (WiFi.status() == WL_CONNECTED) {
    wifi_connected = true;
    Serial.println("‚úÖ WiFi CONNECTED!");
    Serial.printf("   IP: %s\n", WiFi.localIP().toString().c_str());
    Serial.printf("   Signal: %d dBm\n", WiFi.RSSI());
    Serial.printf("   Upload URL: %s\n", UPLOAD_URL);
    
    // Setup web server routes
    server.on("/", HTTP_GET, []() {
      String html = "<html><head><title>ESP32 Camera</title>";
      html += "<meta name='viewport' content='width=device-width, initial-scale=1'>";
      html += "<style>body{font-family:Arial;padding:20px;background:#f0f0f0;} ";
      html += "h1{color:#333;} a{color:#0066cc;text-decoration:none;font-size:18px;}</style></head>";
      html += "<body><h1>ü§ñ ESP32 Robot Camera</h1>";
      html += "<p>Status: <strong style='color:green'>Online</strong></p>";
      html += "<p>Mode: <strong>BATCH Upload (4 images via HTTPS)</strong></p>";
      html += "<p>üì∏ <a href='/list'>View Photo Gallery</a></p>";
      html += "</body></html>";
      server.send(200, "text/html", html);
    });
    
    server.on("/list", HTTP_GET, []() {
      String html = "<html><head><title>Photo Gallery</title>";
      html += "<meta name='viewport' content='width=device-width, initial-scale=1'>";
      html += "<style>body{font-family:Arial;padding:20px;background:#f0f0f0;} ";
      html += "ul{list-style:none;padding:0;} li{margin:10px;background:white;padding:10px;border-radius:5px;} ";
      html += "a{text-decoration:none;color:#0066cc;font-size:16px;}</style></head>";
      html += "<body><h1>üì∏ SD Card Photo Gallery</h1><ul>";
      
      File root = SD_MMC.open("/");
      File file = root.openNextFile();
      int photoCount = 0;
      
      while(file) {
        if (!file.isDirectory()) {
          String filename = String(file.name());
          if (filename.endsWith(".jpg")) {
            html += "<li>üì∑ <a href='/photo?file=" + filename + "'>" + filename + "</a>";
            html += " (" + String(file.size() / 1024) + " KB)</li>";
            photoCount++;
          }
        }
        file = root.openNextFile();
      }
      
      if (photoCount == 0) {
        html += "<li>No photos found on SD card</li>";
      }
      
      html += "</ul><p><a href='/'>‚Üê Back to Home</a></p></body></html>";
      server.send(200, "text/html", html);
    });
    
    server.on("/photo", HTTP_GET, []() {
      String filename = server.arg("file");
      
      if (filename.indexOf("..") >= 0) {
        server.send(400, "text/plain", "Invalid filename");
        return;
      }
      
      File file = SD_MMC.open("/" + filename);
      
      if (!file) {
        server.send(404, "text/plain", "File not found: " + filename);
        return;
      }
      
      server.streamFile(file, "image/jpeg");
      file.close();
    });
    
    server.begin();
    Serial.println("\n‚úÖ Web server started on port 80");
    Serial.printf("   View photos at: http://%s/list\n", WiFi.localIP().toString().c_str());
  } else {
    wifi_connected = false;
    Serial.println("‚ùå WiFi FAILED - continuing offline");
  }

  Serial.println("\n========================================");
  Serial.println("‚úÖ SYSTEM READY");
  Serial.println("========================================");
  Serial.println("Mode: BATCH Upload via HTTPS (4 images ‚Üí 1 request)");
  Serial.println("Press button (GPIO 45) to start capture");
  Serial.println("========================================\n");

  delay(1000);
  
  // Test button at startup
  Serial.println("üîç Testing button...");
  for (int i = 0; i < 5; i++) {
    int buttonState = digitalRead(BUTTON_PIN);
    Serial.printf("Button state: %s\n", buttonState == HIGH ? "HIGH (not pressed)" : "LOW (pressed)");
    delay(100);
  }
  Serial.println("Button test complete. Ready for input.\n");
}

void loop() {
  // Button debouncing with state tracking
  static bool lastStableState = HIGH;
  static bool lastReading = HIGH;
  static unsigned long lastDebounceTime = 0;
  const unsigned long debounceDelay = 50;
  
  bool currentReading = digitalRead(BUTTON_PIN);
  
  if (currentReading != lastReading) {
    lastDebounceTime = millis();
    lastReading = currentReading;
  }
  
  if ((millis() - lastDebounceTime) > debounceDelay) {
    if (currentReading != lastStableState) {
      lastStableState = currentReading;
      
      if (currentReading == LOW && !is_capturing) {
        Serial.println("\nüîò BUTTON PRESSED!");
        is_capturing = true;
        capture();
        is_capturing = false;
        
        while (digitalRead(BUTTON_PIN) == LOW) {
          delay(10);
        }
        Serial.println("üîò Button released, ready for next press\n");
      }
    }
  }
  
  // Handle web server requests
  if (wifi_connected) {
    server.handleClient();
  }
  
  delay(10);
}

void capture() {
  Serial.println("\nüé¨ Starting 4-photo sequence...\n");

  // Array to store photo information
  PhotoInfo photos[4];

  // Position 1: Left + Down
  Serial.println("üìç Position 1: left-down");
  head.moveH(0);
  head.moveN(0);
  delay(HOLD_TIME);
  takePhoto(1, "left-down");
  photos[0] = {"/robot_pos1_left-down.jpg", "left-down", 1};

  // Position 2: Right + Down
  Serial.println("üìç Position 2: right-down");
  head.moveH(90);
  delay(HOLD_TIME);
  takePhoto(2, "right-down");
  photos[1] = {"/robot_pos2_right-down.jpg", "right-down", 2};

  // Position 3: Right + Up
  Serial.println("üìç Position 3: right-up");
  head.moveN(90);
  delay(HOLD_TIME);
  takePhoto(3, "right-up");
  photos[2] = {"/robot_pos3_right-up.jpg", "right-up", 3};

  // Position 4: Left + Up
  Serial.println("üìç Position 4: left-up");
  head.moveH(0);
  delay(HOLD_TIME);
  takePhoto(4, "left-up");
  photos[3] = {"/robot_pos4_left-up.jpg", "left-up", 4};

  // Return to center
  Serial.println("\nüéØ Returning to center...");
  head.moveH(45);
  head.moveN(45);

  // Now upload all 4 images in one batch
  Serial.println("\n==================================================");

  if (wifi_connected) {
    if (testServerConnection()) {
      bool success = uploadBatchHTTP(photos, 4);
      if (success) {
        photo_counter += 4;
        Serial.println("‚úÖ All 4 images uploaded successfully!");
        
        // Optional: Delete all 4 files after successful upload
        // for (int i = 0; i < 4; i++) {
        //   SD_MMC.remove(photos[i].filename);
        //   Serial.printf("üóëÔ∏è  Deleted: %s\n", photos[i].filename.c_str());
        // }
      } else {
        Serial.println("‚ùå Batch upload failed - images remain on SD card");
      }
    } else {
      Serial.println("‚ùå Server unreachable - skipping upload");
    }
  } else {
    Serial.println("‚ö†Ô∏è WiFi not connected - 4 photos saved to SD only");
  }

  Serial.println("‚úÖ Sequence complete!\n");
}
